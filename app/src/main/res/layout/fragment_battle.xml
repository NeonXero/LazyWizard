    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/etWizName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="7"
            android:hint="Enter Wizard Name..." />

        <Button
            android:id="@+id/btnSaveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/llHead"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/llHead"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:text="Save" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llName"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Headgear: "
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spHead"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llHead"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Armor: "
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spBody"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWeapon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llBody"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvWeapon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Weapon: "
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spWeapon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llJewelry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llWeapon"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvJewelry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Accessory: "
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spJewelry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="right" />
    </LinearLayout>


</RelativeLayout>